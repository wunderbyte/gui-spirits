{
  "name": "gui-spirits",
  "version": "0.0.0",
  "module": "dist/index.js",
  "scripts": {
    "boot": "lerna bootstrap",
    "build": "lerna bootstrap && rollup --config --input spirits/src/index.js --file dist/index.js",
    "prettier": "npm run prettier:js && npm run prettier:json",
    "prettier:js": "prettier --write '{src,test}/**/*.{js,mjs}' --ignore-path .prettierignore",
    "prettier:json": "prettier --write '{src,test}/*/package.json' 'package.json'",
    "clean": "npm run clean:lerna && npm run clean:npm",
    "clean:lerna": "lerna clean",
    "clean:npm": "npm run clean:npm:unlock && npm run clean:npm:uninstall",
    "clean:npm:unlock": "find . -name \"package-lock.json\" -not -path \"./node_modules/*\" -delete && echo \"package-lock.json files removed!\"",
    "clean:npm:uninstall": "rm -rf `find -type d -name node_modules` && echo \"node_modules folders removed!\"",
    "export": "node --unhandled-rejections=strict tasks/export.mjs",
    "test": "concurrently \"npm run test:build\" \"npm run test:serve\"",
    "test:build": "esbuild test/test.js --format=esm --target=chrome93,firefox93,safari15 --bundle --watch --outfile=spec/spec.mjs",
    "test:serve": "npx jasmine-browser-runner serve"
  },
  "browserslist": [
    "last 1 Firefox versions",
    "last 1 Chrome versions",
    "last 1 Safari versions"
  ],
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/plugin-proposal-class-properties": "^7.10.1",
    "@babel/plugin-proposal-decorators": "^7.10.3",
    "@babel/plugin-proposal-do-expressions": "^7.10.1",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.11.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.3",
    "@babel/plugin-proposal-optional-chaining": "^7.10.3",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.1",
    "@babel/plugin-proposal-private-methods": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "chokidar-cli": "^2.1.0",
    "concurrently": "^5.2.0",
    "core-js": "^3.6.5",
    "fs-extra": "^9.0.1",
    "jasmine-browser-runner": "^0.9.0",
    "lerna": "^4.0.0",
    "lit-css": "^0.1.3",
    "lit-html": "^1.3.0",
    "live-server": "^1.2.1",
    "minimist": "^1.2.5",
    "prettier": "^2.0.5",
    "rollup": "^2.18.1",
    "rollup-plugin-terser": "^6.1.0"
  },
  "dependencies": {
    "esbuild": "^0.13.8"
  }
}
